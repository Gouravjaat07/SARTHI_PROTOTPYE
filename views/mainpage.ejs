.card p{margin:0;color:#c9d7f2}

.section{padding:56px 24px}
.section h2{font-size:28px;margin:0 0 8px}
.section .sub{color:var(--muted);margin-bottom:18px}

.grid-2{display:grid;grid-template-columns:1fr 1fr;gap:18px}
.grid-3{display:grid;grid-template-columns:repeat(3,1fr);gap:18px}
.grid-4{display:grid;grid-template-columns:repeat(4,1fr);gap:18px}

.tag{display:inline-flex;align-items:center;gap:8px;padding:8px 10px;border-radius:999px;background:rgba(124,157,255,0.12);border:1px solid rgba(124,157,255,0.35);color:#cfe1ff;font-size:13px}

.impact .kpi{padding:20px 18px}
.kpi .big{font-size:34px;font-weight:900;letter-spacing:-0.02em}
.kpi .small{color:var(--muted)}

.list{display:grid;gap:10px}
.li{display:flex;gap:10px;align-items:flex-start}
.li .dot{width:10px;height:10px;border-radius:50%;margin-top:7px;background:linear-gradient(90deg,var(--brand),var(--brand-2))}

.banner{padding:18px;border-radius:var(--radius);background:linear-gradient(120deg,rgba(124,157,255,0.15),rgba(126,245,207,0.1));border:1px dashed rgba(124,157,255,0.4)}

footer{padding:36px 24px;border-top:1px solid var(--border);color:var(--muted)}

@media (max-width: 980px){
  .hero-grid, .grid-2{grid-template-columns:1fr}
  .cards{grid-template-columns:1fr}
  .grid-3{grid-template-columns:1fr 1fr}
  .grid-4{grid-template-columns:1fr 1fr}
}
@media (max-width: 540px){
  .grid-3, .grid-4{grid-template-columns:1fr}
}

  </style>
