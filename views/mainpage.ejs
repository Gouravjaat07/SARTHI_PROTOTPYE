    .hero-cta{display:flex;flex-wrap:wrap;gap:14px;margin-top:22px}
    .glass{background:var(--card);border:1px solid var(--border);border-radius:var(--radius);box-shadow:var(--shadow)}
    .stat{
      padding:18px;border-radius:14px;background:linear-gradient(180deg,rgba(255,255,255,0.06),rgba(255,255,255,0.02));
      border:1px solid var(--border);text-align:center
