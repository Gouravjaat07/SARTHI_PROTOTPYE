    .content{flex:1;overflow:auto;padding:20px;}
    .container{max-width:var(--max);margin:auto;display:grid;gap:20px;}
    /* Profile Sections */
    .card{background:var(--panel);padding:20px;border-radius:var(--radius);
      border:1px solid var(--border);box-shadow:var(--shadow);}
    .profile-header{display:flex;gap:20px;align-items:center;}
    .avatar{width:80px;height:80px;border-radius:50%;
      background:linear-gradient(135deg,var(--brand),var(--brand2));}
    .profile-info h2{margin:0;font-size:22px;font-weight:700;}
    .profile-info p{color:var(--muted);margin:4px 0;}
    .grid-2{display:grid;grid-template-columns:1fr 1fr;gap:20px;}
    .list-item{padding:10px;border-radius:12px;background:rgba(255,255,255,.05);margin:5px 0;}
    .btn{padding:10px 14px;border-radius:12px;cursor:pointer;border:0;font-weight:600;}
    .btn.primary{background:linear-gradient(90deg,var(--brand),var(--brand2));color:#0a0f22;}
    /* Responsive */
    @media(max-width:900px){
