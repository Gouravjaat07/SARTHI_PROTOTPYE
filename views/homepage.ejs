      const ctx = c.getContext('2d');
      const labels = ['Python','Comm','Problem-Solv','English','Excel'];
      const values = [0.8,0.65,0.75,0.55,0.7]; // 0..1
      const cx = c.width/2, cy = c.height/2+10, r = 110;

      ctx.clearRect(0,0,c.width,c.height);
      ctx.strokeStyle = 'rgba(255,255,255,.25)';
      ctx.fillStyle = 'rgba(124,157,255,.18)';
      ctx.lineWidth = 1;

      // grid (5 rings)
      for(let k=1;k<=5;k++){
        ctx.beginPath();
        for(let i=0;i<labels.length;i++){
          const ang = (Math.PI*2 * i/labels.length) - Math.PI/2;
          const rr = r*k/5;
          const x = cx + rr*Math.cos(ang);
